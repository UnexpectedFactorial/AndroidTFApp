<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".QuestionUpdater"
    android:orientation="vertical"
    android:padding="15dp"
    >

    <TextView
        android:id="@+id/textView6"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Please modify your question below"
        tools:layout_editor_absoluteX="57dp"
        tools:layout_editor_absoluteY="13dp" />

    <EditText
        android:id="@+id/qupdateINPUT"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:ems="10"
        android:inputType="textMultiLine"
        android:hint="Type your question here"
        android:padding="25dp"
        android:background="#CCC"
        android:maxLength="254"
        />

    <Button
        android:id="@+id/qupdateBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Update" />

    <Button
        android:id="@+id/qupdatebackBTN"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="Exit without saving"
        android:backgroundTint="@color/buttonColor"
        android:textColor="#FFF"
        />
</LinearLayout>